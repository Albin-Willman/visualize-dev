<%= simple_form_for(@feature) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :project %>
    <%= f.input :min_days %>
    <%= f.input :max_days %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
